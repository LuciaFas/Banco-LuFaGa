<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/imgPiggy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/piggy_bank">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMov"
        app:layout_constraintStart_toEndOf="@+id/imgPiggy"
        app:layout_constraintTop_toTopOf="@+id/imgPiggy"
        android:layout_marginStart="10dp"
        android:text="Descripicion movimiento">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtInfoMov"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/txtMov"
        app:layout_constraintStart_toStartOf="@+id/txtMov"
        android:text="Info movimiento"
        style="@style/MyTheme.Small">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>